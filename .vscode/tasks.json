{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build this file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-O0",
                "-Wall",
                "-fsanitize=address"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build with AddressSanitizer enabled."
        }
    ],
    "version": "2.0.0"
}
